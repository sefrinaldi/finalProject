<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Prabayar">
        <insert id="insert" parameterType="com.sefrinaldi.plp.model.Prabayar">
            INSERT INTO TRANSAKSI (ID, ORDERID, NAME, ALAMAT, DAYA, TOKEN, STATUS) VALUES
            (#{id}, #{orderId}, #{name}, #{alamat}, #{daya}, #{token}, #{status});
            <selectKey keyProperty="orderId" resultType="int" order="AFTER">
                select last_insert_id() as id
            </selectKey>
        </insert>

    <resultMap id="result" type="com.sefrinaldi.plp.model.Prabayar">
        <result property="id" column="ID"/>
        <result property="orderId" column="ORDERID"/>
        <result property="name" column="NAME"/>
        <result property="alamat" column="ALAMAT"/>
        <result property="daya" column="DAYA"/>
        <result property="token" column="TOKEN"/>
        <result property="status" column="STATUS"/>
    </resultMap>

