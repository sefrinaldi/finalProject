        <result property="tahun" column="TAHUN"/>
        <result property="tagihan" column="TAGIHAN"/>
        <result property="status" column="STATUS"/>
    </resultMap>

    <select id="getInvoice" resultMap="result">
        SELECT PELANGGAN.*, TAGIHAN.*
        FROM PELANGGAN
        INNER JOIN TAGIHAN
        ON PELANGGAN.ID = TAGIHAN.ID
        AND PELANGGAN.ID = #{id}
        WHERE STATUS ="active";
    </select>

